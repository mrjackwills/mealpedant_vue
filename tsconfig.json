{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"experimentalDecorators": true,
		
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"types": [
		"node",
		"vite-plugin-pwa/client",
		"vuetify"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/vanillaTS/globalConsts"
	],
	"references": [
		{
			"path": "./tsconfig.config.json"
		}
	],
	"exclude": [
		"node_modules"
	]
}